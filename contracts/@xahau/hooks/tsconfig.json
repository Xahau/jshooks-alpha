{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": false,
    "moduleDetection": "force",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [ "node_modules/@types", "@types" ],
    "skipLibCheck": true
  },
  "include": [ "src/*.ts", "src/**.ts", "src/*/**.ts", "@types/*.d.ts" ],
  "exclude": [ "node_modules", "dist" ]
}
