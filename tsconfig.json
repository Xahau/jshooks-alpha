{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2017"],
    "declaration": false,
    "moduleDetection": "force",
    "outDir": "./contracts",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [ "node_modules/@types", "contracts/@xahau/hooks/src/types" ],
    "skipLibCheck": true
  },
  "include": [ "contracts/*.ts", "contracts/@xahau/hooks/src/types/*.d.ts" ],
  "exclude": [ "node_modules", "build" ]
}
